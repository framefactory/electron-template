{
  "name": "electron-template",
  "version": "1.0.0",
  "description": "Electron/Typescript desktop application",
  "main": "app/bin/app/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cd source/pages && webpack --component=all --mode=development -w\" \"tsc -b -w source/app\" \"electron .\"",
    "build:app": "tsc -b source/app",
    "build:pages": "cd source/pages && webpack --component=all && cd ../..",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/framefactory/electron-template.git"
  },
  "keywords": [
    "electron",
    "desktop",
    "typescript",
    "javascript",
    "template"
  ],
  "author": "Ralph Wiedemeier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/framefactory/electron-template/issues"
  },
  "homepage": "https://github.com/framefactory/electron-template#readme",
  "dependencies": {
    "@types/node": "^12.12.6",
    "dotenv": "^8.2.0",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "child_process": "^1.0.2",
    "concurrently": "^5.3.0",
    "css-loader": "^4.2.1",
    "electron": "^9.2.1",
    "electron-reloader": "^1.0.1",
    "file-loader": "^6.0.0",
    "handlebars": "^4.7.6",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.10.0",
    "mkdirp": "^1.0.4",
    "module-alias": "^2.2.2",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "raw-loader": "^4.0.1",
    "sass-loader": "^9.0.3",
    "source-map-loader": "^1.0.2",
    "terser-webpack-plugin": "^4.1.0",
    "ts-loader": "^8.0.2",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  }
}
