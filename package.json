{
  "name": "@framefactory/electron-template",
  "version": "1.1.0",
  "description": "Electron/Typescript desktop application",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cd src/pages && webpack --mode=development -w\" \"tsc -b -w src/app\" \"electron .\"",
    "build:app": "tsc -b src/app",
    "build:pages": "cd src/pages && webpack",
    "clean": "rimraf app/bin/* && rimraf app/pages/built/*",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "main": "app/bin/main.js",
  "_moduleAliases": {
    "@ff/core": "@framefactory/core"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/framefactory/electron-template.git"
  },
  "keywords": [
    "electron",
    "desktop",
    "typescript",
    "javascript",
    "template"
  ],
  "contributors": [
    {
      "name": "Ralph Wiedemeier",
      "email": "opensource@framefactory.ch",
      "url": "https://github.com/framefactory"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/framefactory/electron-template/issues"
  },
  "homepage": "https://github.com/framefactory/electron-template#readme",
  "dependencies": {
    "@framefactory/core": "file:libs/core",
    "electron": "^12.0.4",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "child_process": "^1.0.2",
    "concurrently": "^6.0.2",
    "css-loader": "^5.2.1",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "dotenv": "^8.2.0",
    "electron-reloader": "^1.2.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "file-loader": "^6.2.0",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.1",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.4.1",
    "mkdirp": "^1.0.4",
    "module-alias": "^2.2.2",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "rimraf": "^3.0.2",
    "sass-loader": "^11.0.1",
    "source-map-loader": "^2.0.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.1.0",
    "typescript": "^4.2.4",
    "webpack": "^5.32.0",
    "webpack-cli": "^4.6.0"
  }
}
