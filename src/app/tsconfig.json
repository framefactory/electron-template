{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,

        "outDir": "../../app/bin",

        "baseUrl": ".",
        "paths": {
            "@ff/core/*": [ "../../libs/core/src/*" ]
        }
    },
    "references": [
        { "path": "../../libs/core/tsconfig.json" }
    ],
    "files": [
        "main.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}