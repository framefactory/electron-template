{
    "compilerOptions": {
        "noEmit": true,
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "sourceMap": true,

        "allowJs": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,

        "baseUrl": "..",
        "paths": {
            "@ff/core/*": [ "node_modules/@framefactory/core/src/*" ],
            "electron": [ "node_modules/electron-nightly/electron" ],
            "*": [ "node_modules/*" ],
        }
    }
}